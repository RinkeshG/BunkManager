<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rinkesh.bunkmanager.WelcomeScreen"
    android:background="#4A4D5D">

    <TextView
        android:id="@+id/logotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bunk Manager"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="206dp"
        android:textStyle="bold|italic"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/start_button"
        android:id="@+id/welcome_next_start"
        android:textStyle="italic"
        android:background="@drawable/welcome_start_button"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textSize="18dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ddd"/>

    <TextView
        android:id="@+id/start_button_border"
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:background="#aa000000"
        android:layout_alignBottom="@+id/welcome_next_start"
        android:layout_alignLeft="@+id/welcome_next_start"/>






</RelativeLayout>
